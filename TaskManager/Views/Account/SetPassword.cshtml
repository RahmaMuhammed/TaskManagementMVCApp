@model TaskManager.ViewModels.SetPasswordViewModel

<h2>Set Password</h2>

<form asp-action="SetPassword" method="post">
    <div class="form-group">
        <label for="newPassword">New Password</label>
        <input asp-for="NewPassword" class="form-control" id="newPassword" type="password" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Set Password</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
